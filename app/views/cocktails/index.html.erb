<div class="container">
    <div class="container mt-4">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="cocktail mt-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <div class="cocktail-body">
              <h2><%= cocktail.name %></h2>
              <% if cocktail.photo.attached? %>
                <%= cl_image_tag(cocktail.photo.key, :transformation => { width: 600, height: 200, crop: "fit"}) %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>