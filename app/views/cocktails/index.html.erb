 <div class="container">
  <div class="banner" style="background-color: grey">
    <h1>Jorj's cock_tails</h1>
    <p>Long drinks for short people</p>
    <%= link_to "Give your best $hott", new_cocktail_path, class: "btn btn-danger btn-lg" %>
  </div>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-12 col-md-6 col-lg-3 mt-4">
          <div class="card">
            <div class="container">
                <h2><%= cocktail.name %></h2>
                <% if cocktail.photo.attached? %>
                  <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
                <% end %>
            </div>
            <%= link_to "Try it!", cocktail_path(cocktail), class: 'card-link' %>
          </div>
        </div>
      <% end %>
    </div>
</div>
</div>

